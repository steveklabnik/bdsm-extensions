#!/usr/bin/env bash

mongrel2_configure()
{
  true
}

mongrel2_build()
{
  OPTFLAGS="-I${install_base_path}/zeromq/2.1.4/include -I${install_base_path}/sqlite3/active/include" \
    OPTLIBS="-L${install_base_path}/zeromq/2.1.4/lib -L${install_base_path}/sqlite3/active/lib" \
    PREFIX="${install_path}" make all
}

mongrel2_install()
{
  OPTFLAGS="-I${install_base_path}/zeromq/2.1.4/include -I${install_base_path}/sqlite3/active/include" \
    OPTLIBS="-L${install_base_path}/zeromq/2.1.4/lib -L${install_base_path}/sqlite3/active/lib" \
    PREFIX="${install_path}" make install
}

