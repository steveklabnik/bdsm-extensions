#!/usr/bin/env bash

enter "${release_path}"

if file_is_nonempty "script/${action}" ; then
  ruby script/${action}
elif file_is_nonempty "script/rails" ; then
  ruby script/rails ${action}
elif command_exists rails ; then
  rails ${action}
else
  true # TODO: raw psql/mysql/etc... based on database.yml
fi
