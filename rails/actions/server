#!/usr/bin/env bash

enter "${release_path}"

if command_exists "ruby"
then
  if file_is_nonempty "script/${action}" x
  then
    ruby script/${action}
  elif file_is_nonempty "script/rails"
  then
    ruby script/rails ${action}
  fi
else
  error "'ruby' does not exist in the path, cannot run ${action}"
fi

