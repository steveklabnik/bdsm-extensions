#!/usr/bin/env bash

description "Extension for managing Nginx (http://wiki.nginx.org/Main)."

action "install" "Installs ${package_name} ${package_version}."
action "setup" "Setup Nginx configuration."
action "start" "Startup nginx."
action "stop" "Stop nginx."
action "status" "Display Nginx status."
action "list" "List nginx master and worker processes."
action "restart" "Restart nginx."
action "server  <project_name>" "Add and enable a new server(s)"
action "enable  <project_name>" "Enable project server config."
action "disable <project_name>" "Disable project server config."

show_help usage
