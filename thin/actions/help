#!/usr/bin/env bash

action "install" "Installs ${package_name} ${package_version}."
action "setup" "Setup the unicorn config file with a template in $release_path/config/"
action "start" "Start service."
action "stop" "Stop service."
action "restart" "Restart service."
action "status" "Display service status."
action "help" "Display this help text."

show_help usage

