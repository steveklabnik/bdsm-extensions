#!/usr/bin/env bash

action "install" "Install the god gem."
action "setup" "Place the config.god template in $release_path/config/config.god"
action "start" "Startup god."
action "stop" "Stop god."
action "services" "Specify services to be setup, configs go in \$release_path/config/\$service.god"
action "enable" "Enable specified services."
action "disable" "Disable specified services."
action "help" "Display this help text."

show_help usage
